// A simple program with 7 balls that will (at some point) make sound while bouncing of
// the bottom

import processing.sound.*;
//An array of 7 ball objects
Ball[] balls = new Ball[7];

//Set up all the balls with most of their parameters depending on their index in the array
void setup() {
  size(800,600);
  for (int i = 0; i < balls.length; i++) {
    balls[i] = new Ball(((i+1) * width/8), 40, 0, 80, color(255 - i*20,0,0 + i * 20));
  }
}

// Loop throught the array to update(), display() the balls and call the played() function 
// in case if a ball is being clicked in
void draw() {
  background(0);
  for (int i = 0; i < balls.length; i++) {
    balls[i].update();
    balls[i].display();
    balls[i].played();
  }  
}

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      